---
layout: default
---

<section>

  <article class="mx-auto break-words measure markdown">
    <time value="{{ date }}" class="text-sm text-gray-600">
      {{ date | readableDate }} • {{ content | readingTime }} to read
    </time>
    <h1 class="mt-6">{{ title }}</h1>
    <div class="mt-6 text-2xl text-gray-500 flow">
      {{ teaser | safe }}
    </div>
    <div class="mt-8 flow">
      {{ content | safe }}
    </div>
  </article>

  <nav class="mx-auto mt-16 measure"><a href="{{ '/blog/' | url }}">← Blog index</a></nav>

  <div class="mt-4">
    <script src="https://utteranc.es/client.js"
            repo="ekickx/personal-blog"
            issue-term="pathname"
            label="blog comment"
            theme="github-light"
            crossorigin="anonymous"
            async>
    </script>
  </div>

</section>
